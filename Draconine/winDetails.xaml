<Window x:Class="Draconine.winDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Draconine"
        mc:Ignorable="d"
        Title="Current Details" Height="616" Width="507">
    <Grid>
        <GroupBox x:Name="grpSummary" Header="Summary" HorizontalAlignment="Left" Margin="10,10,10,0" VerticalAlignment="Top" Height="140" Width="470">
            <Grid>
                <Label x:Name="lblDate" Content="Label" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top"/>
                <Label x:Name="lblSummary" Content="Label" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top"/>
                <Image x:Name="imgIcon" HorizontalAlignment="Center" Height="50" Margin="0,60,0,0" Width="50"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
